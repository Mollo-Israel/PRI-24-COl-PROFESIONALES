@model ProyectoColProfesionales.Models.DB1.Notification2

@{
    ViewData["Title"] = "Detalles de Notificación";
}

<h2>Detalles de Notificación</h2>

<div>
    <h4>Notificación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mensaje</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Fecha 1</dt>
        <dd class="col-sm-10">@Model.Date1?.ToString("dd/MM/yyyy HH:mm:ss")</dd>

        <dt class="col-sm-2">Fecha 2</dt>
        <dd class="col-sm-10">@Model.Date2?.ToString("dd/MM/yyyy HH:mm:ss")</dd>

        <dt class="col-sm-2">Fecha 3</dt>
        <dd class="col-sm-10">@Model.Date3?.ToString("dd/MM/yyyy HH:mm:ss")</dd>

        <dt class="col-sm-2">Persona</dt>
        <dd class="col-sm-10">@Model.Person?.Names</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver al listado</a>
</p>
