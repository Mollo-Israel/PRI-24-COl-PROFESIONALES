@model ProyectoColProfesionales.Models.DB1.Notification2

@{
    ViewData["Title"] = "Eliminar Notificación";
}

<h2>Eliminar Notificación</h2>
@* agregado *@
<h3>¿Estás seguro de que deseas eliminar esta notificación?</h3>
<div>
    <h4>Notificación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mensaje</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Persona</dt>
        <dd class="col-sm-10">@Model.Person?.Names</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index">Cancelar</a>
</form>
