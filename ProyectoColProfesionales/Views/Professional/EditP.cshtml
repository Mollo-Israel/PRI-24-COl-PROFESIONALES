@model ProyectoColProfesionales.Models.ProfesionalModel

@{
    ViewData["Title"] = "Editar Profesional";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditP" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <!-- Campo oculto para enviar idProfesional -->
    <input type="hidden" name="idProfesional" value="@ViewBag.IdProfessional" />

    <!-- Datos Personales -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Names" class="control-label">Nombres</label>
                <input asp-for="Names" class="form-control" placeholder="Nombres">
                <span asp-validation-for="Names" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Primer Apellido</label>
                <input asp-for="Lastname" class="form-control" placeholder="Primer Apellido">
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SecondLastName" class="control-label">Segundo Apellido</label>
                <input asp-for="SecondLastName" class="form-control" placeholder="Segundo Apellido">
                <span asp-validation-for="SecondLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdentityNumber" class="control-label">C.I.</label>
                <input asp-for="IdentityNumber" class="form-control" placeholder="C.I.">
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Datos de contacto -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Teléfono</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Teléfono">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Email" class="control-label">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="Correo Electrónico">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Datos Profesionales -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Specialty" class="control-label">Especialidad</label>
                <input asp-for="Specialty" class="form-control" placeholder="Especialidad">
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Code" class="control-label">Código</label>
                <input asp-for="Code" class="form-control" placeholder="Código">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="University" class="control-label">Universidad</label>
                <input asp-for="University" class="form-control" placeholder="Universidad">
                <span asp-validation-for="University" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Career" class="control-label">Carrera</label>
                <input asp-for="Career" class="form-control" placeholder="Carrera">
                <span asp-validation-for="Career" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <button type="button" onclick="location.href='@Url.Action("ListP", "Professional")'" class="btn btn-secondary">Cancelar</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




